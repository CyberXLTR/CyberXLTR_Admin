# CyberXLTR Admin Backend - Environment Variables
# Copy this file to .env and update the values for your environment.

# Application
DEBUG=True
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8001

# PostgreSQL Database Configuration (RDS-compatible)
# For local development:
DATABASE_URL="postgresql://admin:admin123@localhost:5433/cyberxltr_admin"
# For AWS RDS:
# DATABASE_URL="postgresql://admin:YOUR_RDS_PASSWORD@your-admin-rds-endpoint.region.rds.amazonaws.com:5432/cyberxltr_admin"

# Security
JWT_SECRET_KEY="your-jwt-secret-key-min-32-characters-long-change-in-production"

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3001"]

# Inter-Service Communication (VPC Peering with CyberXLTR)
# URL of the CyberXLTR main service
# For local Docker development:
CYBERXLTR_SERVICE_URL="http://cyberxltr_backend:8000"
# For local development without Docker:
# CYBERXLTR_SERVICE_URL="http://localhost:8000"
# For AWS VPC peering (use private IP/DNS):
# CYBERXLTR_SERVICE_URL="http://10.1.0.50:8000"

# Shared API key - MUST be the same in both CyberXLTR and CyberXLTR Admin
INTER_SERVICE_API_KEY="dev-inter-service-key-change-in-production-min32chars"

# Enable/disable sync (set to false if CyberXLTR is not running)
SYNC_ENABLED=true
SYNC_MAX_RETRIES=3
SYNC_RETRY_DELAY=5
SYNC_TIMEOUT=30

# Logging
LOG_LEVEL="INFO"
